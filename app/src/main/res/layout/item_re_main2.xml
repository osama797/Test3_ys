<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:padding="5dp"

   >

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="rtl"
        android:textDirection="rtl"
      >

        <RelativeLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_bg"
            android:paddingBottom="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView

                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="false"
                android:layout_alignParentStart="false"
                android:layout_alignParentTop="false"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="110dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="Simple Title Text "
                android:textColor="@color/white_gray_end"
                android:textDirection="rtl"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_description2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="110dp"
                android:layout_marginTop="47dp"
                android:lineSpacingExtra="8dp"
                android:text="الماركه:"
                android:textColor="@color/card_bg_color"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/tv_title"
                android:layout_below="@id/tv_title"
                android:layout_marginRight="50dp"
                android:layout_marginTop="1dp"
                android:lineSpacingExtra="8dp"
                android:text="jnjknjk"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_country2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="110dp"
                android:layout_marginTop="70dp"
                android:lineSpacingExtra="8dp"
                android:text="بلد المنشأ:"
                android:textColor="@color/card_bg_color"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/tv_description"
                android:layout_alignStart="@+id/tv_description"
                android:layout_below="@id/tv_description"
                android:layout_marginRight="15dp"
                android:lineSpacingExtra="8dp"
                android:text="jnjknjk"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_date2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="110dp"
                android:layout_marginTop="93dp"
                android:background="@color/no_gps_shadow"
                android:lineSpacingExtra="8dp"
                android:text="وحدة القياس:"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
                android:textColor="@color/card_bg_color"
                android:textSize="16sp"

                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/tv_country"
                android:layout_alignStart="@+id/tv_country"
                android:layout_below="@id/tv_country"
                android:layout_marginRight="25dp"
                android:layout_marginTop="6dp"
                android:text="TextView"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />
        </RelativeLayout>


        <ImageView
            android:id="@+id/img_user"
            android:layout_width="106dp"
            android:layout_height="106dp"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toStartOf="@+id/container"
            app:layout_constraintStart_toStartOf="@+id/container"
            app:layout_constraintTop_toTopOf="@+id/container"
            app:srcCompat="@drawable/ye_icon" />
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>