    <!-- Base application theme. casual-->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="floatingActionButtonStyle">@style/Widget.Design.FloatingActionButton</item>
        <item name="coordinatorLayoutStyle">@style/Widget.Support.CoordinatorLayout</item>
        <item name="cardViewStyle" tools:ignore="PrivateResource">@style/CardView</item>
        <item name="toolbarStyle">@style/toolbarStyle</item>
    </style>
    <style name="toolbarStyle" parent="@style/Base.TextAppearance.AppCompat.Title">
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">cursive</item>
       

    </style>
    <style name="DefaultAppBarLayout" parent="Widget.Design.AppBarLayout">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.ActionBar">
    <item name="windowActionBar">true</item>
    <item name="windowNoTitle">false</item>
        <item name="android:layoutDirection">rtl</item>
</style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- TODO Step 2 - Create a theme that will make our Splashscreen a full screen activity -->

    <style name="FullscreenTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>

    </style>

    <style name="MyToolbar" parent="@style/ThemeOverlay.AppCompat">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:textColorPrimaryInverse">@android:color/white</item>
        <item name="android:windowActionBarOverlay">true</item><item name="actionMenuTextColor">@android:color/white</item><item name="drawerArrowStyle">@style/WhiteDrawerIconStyle</item><item name="windowActionBarOverlay">true</item></style>

    <style name="WhiteDrawerIconStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle"><item name="color">@android:color/white</item><item name="spinBars">true</item></style>

    <style name="textViewHeaderProductDetail">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="textViewProductDetail">
        <item name="android:padding">8dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="GrayIconsToolBar" parent="@style/ThemeOverlay.AppCompat"><item name="android:windowActionBarOverlay">true</item>
        <item name="actionMenuTextColor">@color/gray</item><item name="drawerArrowStyle">@style/grayDrawerIconStyle</item>
        <item name="windowActionBarOverlay">true</item></style>
    <style name="grayDrawerIconStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle"><item name="color">@color/gray</item>
        <item name="spinBars">true</item></style>

    <style name="mainThem" parent="@style/Theme.AppCompat.Light.NoActionBar"><item name="android:typeface">serif</item>
        <item name="colorPrimary">@color/white_gray_end</item><item name="colorPrimaryDark">@color/white_gray_start</item></style>


    <style name="Base.Widget.AppCompat.Toolbar" parent="@style/Base.V7.Widget.AppCompat.Toolbar" tools:ignore="PrivateResource" />
    <style name="fab_layout_wrap_width_wrap_height_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="fab_action_button_base_style" parent="fab_layout_wrap_width_wrap_height_style" />
    <style name="fab_action_button_style" parent="fab_action_button_base_style">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">@dimen/fab_margin</item>
        <item name="android:layout_marginBottom">@dimen/fab_margin</item>
    </style>

</resources>
